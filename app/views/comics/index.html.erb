<h1>Comics#index</h1>
<p>Find me in app/views/comics/index.html.erb</p>

<%= link_to '漫画登録', new_comic_path %>

<% @comics.each do |comic| %>
  <div>
    <p><%= "#{Comic.human_attribute_name(:id)}：#{comic.id}" %></p>
    <p><%= "#{Comic.human_attribute_name(:title)}：#{comic.title}" %></p>
    <p><%= "#{Comic.human_attribute_name(:author)}：#{comic.author}" %></p>
    <% comic.genres.each do |genre| %>
      <% if genre.name.present? %> <!-- nilまたは空文字を登録してるジャンルが表示されないようにしてる -->
        <p><%= "#{Genre.human_attribute_name(:name)}：#{genre.name}" %></p>
      <% end %>
    <% end %>
  </div>
  <div><%= link_to '編集する', edit_comic_path(comic) %></div>
<% end %>

<% breadcrumb :comic_index %>
<%= render 'shared/breadcrumb' %>
