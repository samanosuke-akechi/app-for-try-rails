<div class="container">
  <%= form_with url: api_postal_code_search_search_path, method: :get, local: true do |f| %>
    <%= f.text_field :postal_code, class: "search-form", placeholder: "郵便番号を入力してください" %>
  <% end %>

  <p>
    <%= "#{PostalCodeSearch.human_attribute_name(:zipcode)}：#{@zipcode}" %>
  </p>
  <p>
    <%= "#{PostalCodeSearch.human_attribute_name(:address1)}：#{@address1}" %>
  </p>
  <p>
    <%= "#{PostalCodeSearch.human_attribute_name(:address2)}：#{@address2}" %>
  </p>
  <p>
    <%= "#{PostalCodeSearch.human_attribute_name(:address3)}：#{@address3}" %>
  </p>
</div>

<% breadcrumb :postal_code_search_search %>
<%= render 'shared/breadcrumb' %>
